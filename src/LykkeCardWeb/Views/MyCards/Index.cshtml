        <script src="~/vendor/bootstrap.min.js"></script>
        <script src="~/vendor/angular.min.js"></script>
        <script src="~/vendor/slick.min.js"></script>
        <script src="~/vendor/angular-slick.min.js"></script>
        <script src="~/vendor/qrcode.js"></script>
        <script src="~/vendor/angular-qrcode.js"></script>
        <script src="~/js/app/services/contracts/visaCard.js"></script>
        <script src="~/js/app/services/contracts/cardRequest.js"></script>
        <script src="~/js/app/services/contracts/visaSettings.js"></script>
        <script src="~/js/app/services/cardService.js"></script>
