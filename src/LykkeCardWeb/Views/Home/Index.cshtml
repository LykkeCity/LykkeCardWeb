<div class="container container_separator"><hr></div>
<section class="section section_request" id="request">
    <div class="container">
        <div class="row">
            <div class="col-sm-7 automargin text-center">
                <div class="section_title">Learn how Lykke has helped <b>31,139</b> people like you to trade more freely</div>
                @if (!User.Identity.IsAuthenticated)
                {
                    <form class="form form_request">
                        <div class="form_group">
                            <a href="@Url.Action("SignIn", "Home")" class="btn btn-block btn--primary">Sign in</a>
