<script>
    $(function () {
        $('#subscribe-button').click(function (event) {
            event.preventDefault();

            if ($('#subscribe-email').val() === '') {
                $('#subscribe-message').text('E-mail is required and can’t be empty');
                $('#subscribe-message').css('color', '#ff3e2e');
                $('#subscribe-message').css('text-align', 'left');
                $('#subscribe-message').css('font-family', 'ProximaNova');
                $('#subscribe-message').css('margin-top', '5px');
                $('#subscribe-message').css('font-size', '13px');

                $('#subscribe-message').show();
                return false
            }

            $('#subscribe-button').prop('disabled', true);
            var form = document.forms['subscribe-form'];

            if (form.checkValidity()) {
                var model = {};
                model.Email = $('#subscribe-email').val();

                $.ajax({
                    url: '/Subscriber/Subscribe',
                    data: model,
                    type: 'POST',
                    success: function (data) {
                        console.log(data);

                        if (data.error === 'false') {
                            $('#subscribe-email').val('');
                            $('#subscribe-message').text('Great! Сheck your inbox for confirmation');
                            $('#subscribe-message').css('color', '#13b72a');
                            $('#subscribe-message').css('text-align', 'left');
                            $('#subscribe-message').css('font-family', 'ProximaNova');
                            $('#subscribe-message').css('margin-top', '5px');
                            $('#subscribe-message').css('font-size', '13px');

                            $('#subscribe-message').show();
                        }
                        else {
                            $('#subscribe-message').text('You are already subscribed');
                            $('#subscribe-message').css('color', '#ff3e2e');
                            $('#subscribe-message').css('text-align', 'left');
                            $('#subscribe-message').css('font-family', 'ProximaNova');
                            $('#subscribe-message').css('margin-top', '5px');
                            $('#subscribe-message').css('font-size', '13px');

                            $('#subscribe-message').show();
                        }

                        $('#subscribe-button').prop('disabled', false);
                    }
                });
            }
            else {
                $('#subscribe-message').text('Please enter a valid email address');
                $('#subscribe-message').css('color', '#ff3e2e');
                $('#subscribe-message').css('text-align', 'left');
                $('#subscribe-message').css('font-family', 'ProximaNova');
                $('#subscribe-message').css('margin-top', '5px');
                $('#subscribe-message').css('font-size', '13px');

                $('#subscribe-message').show();
                $('#subscribe-button').prop('disabled', false);
            }

            return false;
        });
    });
</script>
